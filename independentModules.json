{
   "modules": [
      {
         "name": "App folder",
         "pattern": "src/app/**",
         "allowImportsFrom": [
            "src/app/**",
            "{sharedImports}",
            "src/features/**"
         ]
      },

      {
         "name": "Features",
         "pattern": "src/features/**",
         "allowImportsFrom": [
            "{family_3}/**",
            "{sharedImports}",
            "{featurePublicApis}"
         ],
         "errorMessage": "ðŸ”¥ A feature can only import items from shared folders, its own feature, or the public API (index.ts) of other features. ðŸ”¥"
      },

      {
         "name": "Shared",
         "pattern": [
            "src/shared/components/**",
            "src/shared/hooks/**",
            "src/shared/lib/**",
            "src/shared/types/**",
            "src/shared/*",
            "src/shared/**",
            "src/shared/**/**"
         ],
         "allowImportsFrom": ["{sharedImports}"],
         "errorMessage": "ðŸ”¥ Shared folders can't import items from the `features` or `app` folders. ðŸ”¥"
      },

      {
         "name": "Unknown files",
         "pattern": [["src/**", "!src/*"]],
         "allowImportsFrom": [],
         "allowExternalImports": false,
         "errorMessage": "ðŸ”¥ This file is not specified as an independent module in `independentModules.jsonc`. ðŸ”¥"
      }
   ],
   "reusableImportPatterns": {
      "sharedImports": [
         "src/shared/components/**",
         "src/shared/hooks/**",
         "src/shared/lib/**",
         "src/shared/types/**",
         "src/shared/*",
         "src/shared/**",
         "src/shared/**/***"
      ],
      "featurePublicApis": ["src/features/*/index.ts"]
   }
}
